{
  "manifest_version": 2,
  "name": "My Extension",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "content_security_policy": "script-src 'self' https://cdn.geolonia.com; object-src 'self'",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "My Extension",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "https://emailrep.io/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "commands": {
    "select-street-address": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Selecting text as a street address."
    },
    "select-phone-number": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+O"
      },
      "description": "Selecting text as a phone number."
    },
    "select-email-address": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+P"
      },
      "description": "Selecting text as a email address."
    }
  }
}